<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:outlineProvider="bounds"
    android:outlineSpotShadowColor="@color/black"
    android:outlineAmbientShadowColor="@color/black">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/trang"
            android:textStyle="bold"
            android:background="@color/red"
            android:text="Chọn số lượng"/>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_weight="1"
        android:paddingHorizontal="30dp"
        android:paddingVertical="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btnGiam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_remove_24"
            android:tint="@color/trang"
            android:background="@color/red" />
        <TextView
            android:id="@+id/txtSL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/tao_vien"
            android:text="1"
            android:gravity="center"/>
        <ImageButton
            android:id="@+id/btnTang"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_add_24"
            android:tint="@color/trang"
            android:background="@color/red" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingBottom="5dp">

        <Button
            android:layout_weight="1"
            android:id="@+id/btnHuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/trang"
            android:text="Hủy"
            android:textStyle="bold"
            android:background="@drawable/botron_edittext2"
            android:backgroundTint="@color/white"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/btnXacNhan"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đồng ý"
            android:textColor="@color/trang"
            android:textStyle="bold"
            android:background="@drawable/botron_edittext2"
            android:backgroundTint="@color/red"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

</LinearLayout>