<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/logodangnhap"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/set_alpha">
        <LinearLayout
            android:paddingVertical="100dp"
            android:paddingHorizontal="20dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/botron_edittext"
            android:layout_marginHorizontal="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textAlignment="center"
                android:textColor="@color/trang"
                android:text="Bạn chưa đăng nhập tài khoản. Vui lòng đăng nhập!!"
                android:textSize="25dp"/>
            <Button
                android:layout_gravity="center"
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/botron_button"
                android:padding="7.5dp"
                android:textColor="@color/trang"
                android:textSize="20dp"
                android:text="Đăng nhập" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>